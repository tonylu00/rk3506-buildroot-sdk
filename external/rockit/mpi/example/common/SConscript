from building import *
Import("SOC")

cwd     = GetCurrentDir()
src     = Split('''
test_comm_argparse.c
''')

if GetDepend('RT_USING_ROCKIT_VI'):
    src += ['test_mpi_vi.cpp']

CPPPATH = [cwd]
CPPPATH += ["../../sdk/include"]
CPPPATH += ["../include"]

CPPDEFINES = ['OS_RTT']
if SOC == 'RK3308':
    CPPPATH += ["../../sdk/lib/arm/rk3308"]


group = DefineGroup('rockit', src, depend = ['RT_USING_ROCKIT'], CPPPATH = CPPPATH, CPPDEFINES=CPPDEFINES)

Return('group')
